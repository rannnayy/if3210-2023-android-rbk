<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">
    
    <TextView
        android:id="@+id/price_total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp5000000"
        app:layout_constraintTop_toBottomOf="@id/total_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="100dp" />

    <TextView
        android:id="@+id/total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total:"
        app:layout_constraintBottom_toTopOf="@+id/price_total_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/price_bt_to_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bayar"
        android:textSize="16sp"
        android:background="@drawable/rounded_button_shape"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/total_text"
        app:layout_constraintBottom_toBottomOf="@+id/price_total_text"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>